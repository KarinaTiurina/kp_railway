<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.user.email %></td>
        <td> | <%= ticket.way.stops_array %></td>
        <td> | <%= ticket.price %></td>
        <td> | <%= ticket.end_stop %></td>
        <td> | <%= link_to 'Show', ticket_path(ticket) %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Ticket', new_ticket_path %>
