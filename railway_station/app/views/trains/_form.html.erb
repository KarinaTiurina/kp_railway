<%= form_for(@train) do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @train} %>

    <div class="form-group">
      <%= f.label :train_type %>

      <%= f.select :train_type, options_for_select([ "Пригородный", "Дальнего следования" ], "Пригородный") %>
    </div>

    <div class="form-group">
      <%= f.label :number_of_seats %>
      <%= f.number_field :number_of_seats, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price_per_stop %>
      <p><%= f.number_field :price_per_stop, class: 'form-control', step: 0.01 %></p>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: 'btn btn-primary' %>
    </div>
<% end %>
